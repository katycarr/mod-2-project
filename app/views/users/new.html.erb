<h1>Sign Up</h1>

<% if @user.errors.full_messages %>
  <% @user.errors.full_messages.each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :name, "Username" %>
  <%= f.text_field :name %>
  <%= f.label :dob, "Date of Birth" %>
  <%= f.date_field :dob  %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.submit %>
  <% end %>
