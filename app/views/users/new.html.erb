<h1>Sign Up</h1>

<% if @user.errors.full_messages %>
  <% @user.errors.full_messages.each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :name, "Username" %><br>
  <%= f.text_field :name %><br>
  <%= f.label :dob, "Date of Birth" %><br>
  <%= f.date_field :dob  %><br>
  <%= f.label :password %><br>
  <%= f.password_field :password %><br>
  <%= f.submit %>
<% end %>
