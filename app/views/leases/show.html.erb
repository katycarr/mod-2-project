<div class="wrapper">

<h1>Lease</h1>

<table class="table sm-table">
  <tr>
    <th scope="row">Property Manager:</th>
    <td><h2><%= link_to @lease.building.property_manager.name, property_manager_path(@lease.building.property_manager) %></h2></td>
  </tr>
  <tr>
    <th scope="row">Address:</th>
    <td><h2><%= @lease.building.address %></h2></td>
  </tr>
  <tr>
    <th scope="row">Tenant:</th>
    <td><h2><%= @lease.user.name %></h2></td>
  </tr>
  <tr>
    <th scope="row">Monthly Rent:</th>
    <td><h2>$<%= @lease.rent %></h2></td>
  </tr>
  <tr>
    <th scope="row">Current Lease?</th>
    <td>
      <h2><%= "True" if @lease.current == true %>
      <%= "False" if @lease.current == false %></h2>
    </td>
  </tr>


</table>


</div>

<div class="wrapper wrapper-last">
  <div class="box">
    <% if @lease.review %>
      <%= link_to 'View Review', review_path(@lease.review), class:"btn btn-outline-info btn-sm" %>
    <% else %>
      <%= link_to 'Write Review', new_review_path, class:"btn btn-outline-info btn-sm" %>
    <% end %>
    <%= button_to 'Delete Lease', lease_path(@lease), method: :delete, class:"btn btn-outline-info btn-sm" %>
    <%= link_to 'Home Page', user_path(@user), method: :get, class:"btn btn-outline-info btn-sm" %>
  </div>

</div>
